<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.social.seguridad.barbarus.seguridadvecinal.RegistrarseActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Registraciòn"
        android:id="@+id/registracionTxt"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="22dp"
        android:textAlignment="center" />


                    <RelativeLayout
                        android:id="@+id/wrapperLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/paso1ScrollView" >

                        </ScrollView>

                        <RelativeLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="false"
                            android:layout_marginTop="62dp"
                            android:layout_below="@+id/paso1ScrollView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:inputType="textPersonName"
                                android:ems="15"
                                android:id="@+id/nombreCompletoTXT"
                                android:hint="Nombre completo"
                                android:textAlignment="center"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="90dp"
                                android:maxLength="30" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberSigned"
                                android:ems="10"
                                android:id="@+id/dniTXT"
                                android:hint="DNI"
                                android:textAlignment="center"
                                android:maxLength="30"
                                android:layout_below="@+id/nombreCompletoTXT"
                                android:layout_alignLeft="@+id/nombreCompletoTXT"
                                android:layout_alignStart="@+id/nombreCompletoTXT"
                                android:layout_alignRight="@+id/nombreCompletoTXT"
                                android:layout_alignEnd="@+id/nombreCompletoTXT" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/telefonoTXT"
                                android:layout_below="@+id/dniTXT"
                                android:layout_alignLeft="@+id/dniTXT"
                                android:layout_alignStart="@+id/dniTXT"
                                android:layout_alignRight="@+id/dniTXT"
                                android:layout_alignEnd="@+id/dniTXT"
                                android:textAlignment="center"
                                android:hint="Telefono"
                                android:inputType="numberSigned" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:ems="10"
                                android:id="@+id/emailTXT"
                                android:layout_below="@+id/telefonoTXT"
                                android:layout_alignLeft="@+id/telefonoTXT"
                                android:layout_alignStart="@+id/telefonoTXT"
                                android:layout_alignRight="@+id/telefonoTXT"
                                android:layout_alignEnd="@+id/telefonoTXT"
                                android:hint="Correo electronico"
                                android:textAlignment="center"
                                android:maxLength="30"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/passwordTXT"
                                android:hint="Contraseña"
                                android:textAlignment="center"
                                android:maxLength="30"
                                android:layout_below="@+id/emailTXT"
                                android:layout_alignLeft="@+id/emailTXT"
                                android:layout_alignStart="@+id/emailTXT"
                                android:layout_alignRight="@+id/emailTXT"
                                android:layout_alignEnd="@+id/emailTXT"
                                android:inputType="textPassword" />












                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Completar"
                                android:id="@+id/textView4"
                                android:textAlignment="center"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Datos personales"
                                android:id="@+id/textView5"
                                android:layout_below="@+id/textView4"
                                android:layout_centerHorizontal="true" />



                        </RelativeLayout>
                    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarme"
        android:id="@+id/registrarmeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#fcd255"/>

</RelativeLayout>