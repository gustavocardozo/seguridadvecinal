<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.social.seguridad.barbarus.seguridadvecinal.RegistrarseActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Únete a tu comunidad"
        android:id="@+id/registracionTxt"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingTop="22dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarme"
        android:id="@+id/registrarmeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_light"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/registrarmeButton"
        android:layout_below="@+id/registracionTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="15"
                android:id="@+id/nameTXT"
                android:hint="Nombre completo"
                android:textAlignment="center"
                android:maxLength="30"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/dniTXT"
                android:hint="DNI"
                android:textAlignment="center"
                android:maxLength="30"
                android:layout_below="@+id/nameTXT"
                android:layout_alignRight="@+id/nameTXT"
                android:layout_alignEnd="@+id/nameTXT"
                android:layout_alignLeft="@+id/nameTXT"
                android:layout_alignStart="@+id/nameTXT"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/nroTelefonoTXT"
                android:hint="Teléfono"
                android:textAlignment="center"
                android:maxLength="30"
                android:layout_below="@+id/dniTXT"
                android:layout_alignRight="@+id/nameTXT"
                android:layout_alignEnd="@+id/nameTXT"
                android:layout_alignLeft="@+id/nameTXT"
                android:layout_alignStart="@+id/nameTXT" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="15"
                android:id="@+id/emailAddressTXT"
                android:hint="Email"
                android:textAlignment="center"
                android:maxLength="30"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nroTelefonoTXT"
                android:layout_alignLeft="@+id/nroTelefonoTXT"
                android:layout_alignStart="@+id/nroTelefonoTXT" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="15"
                android:id="@+id/password1TXT"
                android:hint="Contraseña"
                android:textAlignment="center"
                android:maxLength="30"
                android:layout_below="@+id/emailAddressTXT"
                android:layout_alignLeft="@+id/emailAddressTXT"
                android:layout_alignStart="@+id/emailAddressTXT" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al registrarte, aceptas las Condiciones de Servicio y la Política de Privacidad"
                android:id="@+id/terminosCbx"
                android:layout_below="@+id/password1TXT"
                android:layout_alignLeft="@+id/password1TXT"
                android:layout_alignStart="@+id/password1TXT"
                android:layout_alignRight="@+id/password1TXT"
                android:layout_alignEnd="@+id/password1TXT" />




        </RelativeLayout>
    </ScrollView>

</RelativeLayout>