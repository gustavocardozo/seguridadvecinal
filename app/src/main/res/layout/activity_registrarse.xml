<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.social.seguridad.barbarus.seguridadvecinal.RegistrarseActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Únete a tu comunidad"
        android:id="@+id/registracionTxt"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="22dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarme"
        android:id="@+id/configuracionButton"
        android:background="#fcd255"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_alignLeft="@+id/registracionTxt"
        android:layout_alignStart="@+id/registracionTxt"
        android:layout_alignRight="@+id/registracionTxt"
        android:layout_alignEnd="@+id/registracionTxt" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/configuracionButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/registracionTxt">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="15"
                android:id="@+id/nameTXT"
                android:hint="Nombre completo"
                android:textAlignment="textStart"
                android:maxLength="30"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:autoText="false"
                android:textSize="13sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/dniTXT"
                android:hint="DNI"
                android:textAlignment="viewStart"
                android:maxLength="30"
                android:layout_below="@+id/nameTXT"
                android:layout_alignRight="@+id/nameTXT"
                android:layout_alignEnd="@+id/nameTXT"
                android:layout_alignLeft="@+id/nameTXT"
                android:layout_alignStart="@+id/nameTXT"
                android:drawableLeft="@drawable/ic_import_contacts_black_24dp"
                android:textSize="13sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/nroTelefonoTXT"
                android:hint="Teléfono"
                android:textAlignment="viewStart"
                android:maxLength="30"
                android:layout_below="@+id/dniTXT"
                android:layout_alignRight="@+id/nameTXT"
                android:layout_alignEnd="@+id/nameTXT"
                android:layout_alignLeft="@+id/nameTXT"
                android:layout_alignStart="@+id/nameTXT"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:textSize="13sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="15"
                android:id="@+id/emailAddressTXT"
                android:hint="Correo electrónico"
                android:textAlignment="viewStart"
                android:maxLength="30"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nroTelefonoTXT"
                android:layout_alignLeft="@+id/nroTelefonoTXT"
                android:layout_alignStart="@+id/nroTelefonoTXT"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:textIsSelectable="false"
                android:textSize="13sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="15"
                android:id="@+id/password1TXT"
                android:hint="Contraseña"
                android:textAlignment="viewStart"
                android:maxLength="30"
                android:layout_below="@+id/emailAddressTXT"
                android:layout_alignLeft="@+id/emailAddressTXT"
                android:layout_alignStart="@+id/emailAddressTXT"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:textSize="13sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al registrarte, aceptas las Condiciones de Servicio y la Política de Privacidad"
                android:id="@+id/terminosCbx"
                android:layout_below="@+id/password1TXT"
                android:layout_alignLeft="@+id/password1TXT"
                android:layout_alignStart="@+id/password1TXT"
                android:layout_alignRight="@+id/password1TXT"
                android:layout_alignEnd="@+id/password1TXT"
                android:textSize="10sp" />


        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/ic_location_on_black_48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ya tienes una cuenta?  Ingresa"
        android:id="@+id/account"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ksw_md_solid_checked"
        android:layout_marginBottom="5dp" />

</RelativeLayout>